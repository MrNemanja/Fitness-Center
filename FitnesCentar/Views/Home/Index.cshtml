<h1>EVIDENCIJA FITNES CENTARA</h1>
<hr>
<div class="container">
    <div class="buttons">

        <h3>Pretraga</h3>
        <form method="post" action="/Home/Search">
            <label>Naziv:</label>
            <input type="text" name="naziv">
            <br />
            <label>Adresa:</label>
            <input type="text" name="adresa" />
            <br />
            <br />
            <label id="godina">Godina otvaranja:</label>
            <br />
            <br />
            <label>Minimalna granica:</label>
            <input type="text" name="mingran" />
            <br />
            <label>Maksimalna granica:</label>
            <input type="text" name="maxgran" />
            <br />
            <br />
            <button class="ostali" type="submit" name="izbor" value="pretrazi">Pretrazi</button>
            &nbsp;
            <button class="ostali" type="submit" name="izbor" value="reset">Reset</button>
        </form>

        <h3>Sort</h3>
        <form method="post" action="~/Home/Sort">
            <button class="sort" type="submit" name="submit" value="NazivA">NazivuA</button>
            <button class="sort" type="submit" name="submit" value="AdresaA">AdresiA</button>
            <button class="sort" type="submit" name="submit" value="GodinaA">GodiniA</button>
            <br />
            <br />
        </form>
        <form method="post" action="~/Home/SortDESC">
            <button class="sort" type="submit" name="submit" value="NazivD">NazivuD</button>
            <button class="sort" type="submit" name="submit" value="AdresaD">AdresiD</button>
            <button class="sort" type="submit" name="submit" value="GodinaD">GodiniD</button>
        </form>
        <br /> <br /> <br /> 
    </div>

    <div class="table">
        <h2>Fitnes centri</h2>
        @if (ViewBag.centri.Count == 0)
        {
            <h3>Ne postoji ni jedan fitnes centar</h3>
        }
        else
        {
        <table>
            <tr>
                <th>Naziv</th>
                <th>Adresa</th>
                <th>Godina otvaranja</th>
                <th></th>
            </tr>

            @{



                foreach (Fitnes_Centar centar in ViewBag.centri)
                {
                                <tr>
                                    <td class="paran">@centar.Naziv</td>
                                    <td class="neparan">@centar.Adresa</td>
                                    <td class="paran">@centar.Godina_otvaranja</td>
                                    <td class="neparan">
                                        <form method = "post" action="/Details/Choose">
                                    <button class="ostali" type="submit" name="detalji" value="@centar.Naziv">Detalji</button>
                                        </form>
                                    </td>
                                </tr>


                }
            }

        </table>
                }

    </div>
    </div>



